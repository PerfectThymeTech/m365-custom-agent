{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.22/MicrosoftTeams.schema.json",
  "manifestVersion": "1.22",
  "version": "2.0.0",
  "id": "<your-bot-id>",
  "developer": {
    "name": "Microsoft, Inc.",
    "websiteUrl": "https://example.azurewebsites.net",
    "privacyUrl": "https://example.azurewebsites.net/privacy",
    "termsOfUseUrl": "https://example.azurewebsites.net/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Azure Agent Test",
    "full": "Azure Agent Test"
  },
  "description": {
    "short": "Sample demonstrating a simple Agent that echos back user messages.",
    "full": "Sample demonstrating AgentSDK + Teams to demonstrate a simple Agent that echos back user messages."
  },
  "accentColor": "#FFFFFF",
  "copilotAgents": {
    "customEngineAgents": [
      {
        "id": "<your-bot-id>",
        "type": "bot"
      }
    ]
  },
  "bots": [
    {
      "botId": "<your-bot-id>",
      "scopes": [
        "personal"
      ],
      "supportsFiles": true,
      "isNotificationOnly": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "https://<your-web-app-url>.azurewebsites.net/api/v1/messages/message"
  ]
}
